@model Hospisim.Models.Prontuario

@{
    ViewData["Title"] = "Editar Prontuário";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<h4 class="text-center text-muted">Prontuário Nº @Model.NumeroProntuario</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NumeroProntuario" />

            <div class="form-group mb-3">
                <label asp-for="PacienteId" class="control-label">Paciente</label>
                <select asp-for="PacienteId" class="form-control" asp-items="ViewBag.PacienteId"></select>
                <span asp-validation-for="PacienteId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DataAbertura" class="control-label"></label>
                <input asp-for="DataAbertura" class="form-control" />
                <span asp-validation-for="DataAbertura" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ObservacoesGerais" class="control-label"></label>
                <textarea asp-for="ObservacoesGerais" class="form-control" rows="4"></textarea>
                <span asp-validation-for="ObservacoesGerais" class="text-danger"></span>
            </div>

            <hr />
            <div class="d-flex gap-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>