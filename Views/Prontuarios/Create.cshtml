@model Hospisim.Models.Exame

@{
    ViewData["Title"] = "Solicitar Novo Exame";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="AtendimentoId" class="control-label">Atendimento</label>
                <select asp-for="AtendimentoId" class ="form-control" asp-items="ViewBag.AtendimentoId">
                    <option value="">-- Selecione o Atendimento --</option>
                </select>
                <span asp-validation-for="AtendimentoId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TipoExame" class="control-label"></label>
                <input asp-for="TipoExame" class="form-control" />
                <span asp-validation-for="TipoExame" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DataSolicitacao" class="control-label"></label>
                <input asp-for="DataSolicitacao" class="form-control" />
                <span asp-validation-for="DataSolicitacao" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DataRealizacao" class="control-label"></label>
                <input asp-for="DataRealizacao" class="form-control" />
                <span asp-validation-for="DataRealizacao" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Resultado" class="control-label"></label>
                <input asp-for="Resultado" class="form-control" />
                <span asp-validation-for="Resultado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>