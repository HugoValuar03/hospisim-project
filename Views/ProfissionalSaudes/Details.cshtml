@model Hospisim.Models.ProfissionalSaude

@{
    ViewData["Title"] = "Detalhes do Profissional";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <hr />

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">@Model.NomeCompleto</h4>
                <p class="mb-0">@Model.TipoRegistro: @Model.RegistroConselho</p>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Informações Pessoais e Contato</h5>
                        <p><strong>CPF:</strong> @Model.Cpf</p>
                        <p><strong>Telefone:</strong> @Model.Telefone</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Informações de Trabalho</h5>
                        <p><strong>Data de Admissão:</strong> @Model.DataAdmissao.ToShortDateString()</p>
                        <p><strong>Turno:</strong> @Model.Turno</p>
                        <p><strong>Status:</strong> @(Model.Ativo ? "Ativo" : "Inativo")</p>
                    </div>
                </div>
            </div>
            <div class="card-footer text-end">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
            </div>
        </div>
    </div>
</div>