@model Hospisim.Models.Prescricao

@{
    ViewData["Title"] = "Detalhes da Prescrição";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <hr />

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Medicamento: @Model.Medicamento</h4>
                <p class="mb-0">Paciente: @Model.Atendimento?.Paciente?.NomeCompleto</p>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Dosagem e Aplicação</h5>
                        <p><strong>Dosagem:</strong> @Model.Dosagem</p>
                        <p><strong>Frequência:</strong> @Model.Frequencia</p>
                        <p><strong>Via de Administração:</strong> @Model.ViaAdministracao</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Período e Status</h5>
                        <p><strong>Data de Início:</strong> @Model.DataInicio.ToString("g")</p>
                        <p><strong>Data de Fim:</strong> @(Model.DataFim.HasValue ? Model.DataFim.Value.ToString("g") : "Contínuo")</p>
                        <p><strong>Status da Prescrição:</strong> @Model.StatusPrescricao</p>
                    </div>
                </div>
                <hr>
                <h5>Informações Adicionais</h5>
                <p><strong>Profissional Responsável:</strong> @Model.ProfissionalSaude?.NomeCompleto</p>

                <div class="mt-3">
                    <p class="mb-1"><strong>Observações:</strong></p>
                    <blockquote class="blockquote-footer bg-light p-2 rounded">
                        @(string.IsNullOrEmpty(Model.Observacoes) ? "Nenhuma observação." : Model.Observacoes)
                    </blockquote>
                </div>

                <div class="mt-3">
                    <p class="mb-1"><strong>Reações Adversas Registradas:</strong></p>
                    <blockquote class="blockquote-footer bg-light p-2 rounded">
                        @(string.IsNullOrEmpty(Model.ReacoesAdversas) ? "Nenhuma reação adversa registrada." : Model.ReacoesAdversas)
                    </blockquote>
                </div>
            </div>
            <div class="card-footer text-end">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
            </div>
        </div>
    </div>
</div>