@model Hospisim.Models.Atendimento
@using Hospisim.Models

@{
    ViewData["Title"] = "Editar Atendimento";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<h4 class="text-center text-muted">Atendimento ID: @Model.Id</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="PacienteId" class="control-label">Paciente</label>
                    <select asp-for="PacienteId" class="form-control" asp-items="ViewBag.PacienteId"></select>
                    <span asp-validation-for="PacienteId" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="ProfissionalSaudeId" class="control-label">Profissional de Saúde</label>
                    <select asp-for="ProfissionalSaudeId" class="form-control" asp-items="ViewBag.ProfissionalSaudeId"></select>
                    <span asp-validation-for="ProfissionalSaudeId" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ProntuarioId" class="control-label">Prontuário</label>
                    <select asp-for="ProntuarioId" class="form-control" asp-items="ViewBag.ProntuarioId"></select>
                    <span asp-validation-for="ProntuarioId" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="DataEHora" class="control-label"></label>
                    <input asp-for="DataEHora" class="form-control" />
                    <span asp-validation-for="DataEHora" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Tipo" class="control-label"></label>
                    <select asp-for="Tipo" class="form-control" asp-items="Html.GetEnumSelectList<TipoAtendimento>()"></select>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Status" class="control-label"></label>
                    <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<Status>()"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Local" class="control-label"></label>
                    <input asp-for="Local" class="form-control" />
                    <span asp-validation-for="Local" class="text-danger"></span>
                </div>
            </div>

            <hr />

            <div class="d-flex gap-3">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar Para a Lista</a>
            </div>
        </form>
    </div>
</div>