@model Hospisim.Models.Atendimento

@{
    ViewData["Title"] = "Detalhes do Atendimento";
}

<div class="row justify-content-center">
    <div class="col-md-10">

        <h1 class="text-center">@ViewData["Title"]</h1>
        <hr />

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Paciente: @Model.Paciente?.NomeCompleto</h4>
                <p class="mb-0">Atendimento ID: @Model.Id</p>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Data e Hora:</strong> @Model.DataEHora.ToString("g")</p>
                        <p><strong>Tipo:</strong> @Html.DisplayFor(model => model.Tipo)</p>
                        <p><strong>Status:</strong> @Html.DisplayFor(model => model.Status)</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Profissional de Saúde:</strong> @Model.ProfissionalSaude?.NomeCompleto</p>
                        <p><strong>Prontuário Nº:</strong> @Model.Prontuario?.NumeroProntuario</p>
                        <p><strong>Local:</strong> @Model.Local</p>

                    </div>
                </div>
            </div>
            <div class="card-footer text-end">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i> Editar Atendimento
                </a>
                <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
            </div>
        </div>

    </div>
</div>