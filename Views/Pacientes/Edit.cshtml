@model Hospisim.Models.Paciente
@using Hospisim.Models

@{
    ViewData["Title"] = "Editar Paciente";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<h4 class="text-center text-muted">@Model.NomeCompleto</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="NomeCompleto" class="control-label"></label>
                    <input asp-for="NomeCompleto" class="form-control" />
                    <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Cpf" class="control-label"></label>
                    <input asp-for="Cpf" class="form-control" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="DataNascimento" class="control-label"></label>
                    <input asp-for="DataNascimento" class="form-control" type="date" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Sexo" class="control-label"></label>
                    <input asp-for="Sexo" class="form-control" />
                    <span asp-validation-for="Sexo" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="TipoSanguineo" class="control-label"></label>
                    <input asp-for="TipoSanguineo" class="form-control" />
                    <span asp-validation-for="TipoSanguineo" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Telefone" class="control-label"></label>
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="EstadoCivil" class="control-label"></label>
                    <input asp-for="EstadoCivil" class="form-control" />
                    <span asp-validation-for="EstadoCivil" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group mb-3">
                    <label asp-for="EnderecoCompleto" class="control-label"></label>
                    <input asp-for="EnderecoCompleto" class="form-control" />
                    <span asp-validation-for="EnderecoCompleto" class="text-danger"></span>
                </div>
                <div class="col-md-12 mb-3">
                    <label asp-for="NumeroCartaoSus" class="control-label"></label>
                    <input asp-for="NumeroCartaoSus" class="form-control" />
                    <span asp-validation-for="NumeroCartaoSus" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 mb-3 d-flex align-items-center">
                <div class="form-group form-check">
                    <input class="form-check-input" asp-for="PossuiPlanoSaude" />
                    <label class="form-check-label" asp-for="PossuiPlanoSaude"></label>
                </div>
            </div>

            <hr />

            <div class="d-flex gap-3">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar Para a Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}