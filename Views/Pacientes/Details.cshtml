@model Hospisim.Models.Paciente

@{
    ViewData["Title"] = "Detalhes do Paciente";
}

<div class="row justify-content-center">
    <div class="col-md-10">

        <h1 class="text-center">@ViewData["Title"]</h1>
        <hr />

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">@Model.NomeCompleto</h4>
                <p class="mb-0">CPF: @Model.Cpf</p>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Dados Pessoais</h5>
                        <p><strong>Data de Nascimento:</strong> @Model.DataNascimento.ToString("dd/MM/yyyy")</p>
                        <p><strong>Sexo:</strong> @Model.Sexo</p>
                        <p><strong>Tipo Sanguíneo:</strong> @Model.TipoSanguineo</p>
                        <p><strong>Estado Civil:</strong> @Model.EstadoCivil</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Contato e Convênio</h5>
                        <p><strong>Telefone:</strong> @Model.Telefone</p>
                        <p><strong>Endereço:</strong> @Model.EnderecoCompleto</p>
                        <p><strong>Nº Cartão SUS:</strong> @Model.NumeroCartaoSus</p>
                        <p><strong>Possui Plano de Saúde:</strong> @(Model.PossuiPlanoSaude ? "Sim" : "Não")</p>
                    </div>
                </div>
            </div>
            <div class="card-footer text-end">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i> Editar Paciente
                </a>
                <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
            </div>
        </div>

    </div>
</div>