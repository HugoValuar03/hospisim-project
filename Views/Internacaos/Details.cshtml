@model Hospisim.Models.Internacao

@{
    ViewData["Title"] = "Detalhes da Internação";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <hr />

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Paciente: @Model.Paciente?.NomeCompleto</h4>
                <p class="mb-0">CPF: @Model.Paciente?.Cpf</p>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Dados da Internação</h5>
                        <p><strong>Data de Entrada:</strong> @Model.DataEntrada.ToString("g")</p>
                        <p><strong>Previsão de Alta:</strong> @(Model.PrevisaoAlta.HasValue ? Model.PrevisaoAlta.Value.ToString("d") : "Não definida")</p>
                        <p><strong>Status:</strong> @Html.DisplayFor(model => model.StatusInternacao)</p>
                        <p><strong>Atendimento de Origem:</strong> ID @Model.AtendimentoId</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Localização e Plano de Saúde</h5>
                        <p><strong>Setor:</strong> @Model.Setor</p>
                        <p><strong>Quarto:</strong> @Model.Quarto</p>
                        <p><strong>Leito:</strong> @Model.Leito</p>
                        <p><strong>Plano de Saúde Utilizado:</strong> @Model.PlanoSaudeUtilizado</p>
                    </div>
                </div>
                <hr>
                <h5>Motivo e Observações</h5>
                <p><strong>Motivo da Internação:</strong> @Model.MotivoInternacao</p>
                <p><strong>Observações Clínicas:</strong> @Model.ObservacoesClinicas</p>
            </div>
            <div class="card-footer text-end">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
            </div>
        </div>
    </div>
</div>