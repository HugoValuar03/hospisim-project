@model Hospisim.Models.Exame

@{
    ViewData["Title"] = "Editar Exame";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="AtendimentoId" class="control-label">Atendimento</label>
                <select asp-for="AtendimentoId" class="form-control" asp-items="ViewBag.AtendimentoId"></select>
                <span asp-validation-for="AtendimentoId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TipoExame" class="control-label"></label>
                <input asp-for="TipoExame" class="form-control" />
                <span asp-validation-for="TipoExame" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="DataSolicitacao" class="control-label"></label>
                    <input asp-for="DataSolicitacao" type="date" class="form-control" />
                    <span asp-validation-for="DataSolicitacao" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="DataRealizacao" class="control-label"></label>
                    <input asp-for="DataRealizacao" type="date" class="form-control" />
                    <span asp-validation-for="DataRealizacao" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Resultado" class="control-label"></label>
                <textarea asp-for="Resultado" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Resultado" class="text-danger"></span>
            </div>

            <hr />
            <div class="d-flex gap-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}