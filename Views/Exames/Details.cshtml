@model Hospisim.Models.Exame

@{
    ViewData["Title"] = "Detalhes do Exame";
}

<div class="row justify-content-center">
    <div class="col-md-10">

        <h1 class="text-center">@ViewData["Title"]</h1>
        <hr />

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Exame: @Model.TipoExame</h4>
                <p class="mb-0">Paciente: @Model.Atendimento?.Paciente?.NomeCompleto</p>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Data da Solicitação</dt>
                    <dd class="col-sm-8">@Model.DataSolicitacao.ToString("g")</dd>

                    <dt class="col-sm-4">Data da Realização</dt>
                    <dd class="col-sm-8">@Model.DataRealizacao.ToString()</dd>

                    <dt class="col-sm-4">Atendimento de Origem</dt>
                    <dd class="col-sm-8">ID @Model.AtendimentoId - @Model.Atendimento.Paciente.NomeCompleto</dd>

                    <dt class="col-sm-4">Resultado</dt>
                    <dd class="col-sm-8">@Model.Resultado</dd>
                </dl>
            </div>
            <div class="card-footer text-end">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
            </div>
        </div>

    </div>
</div>