@model Hospisim.Models.AltaHospitalar
@using Hospisim.Models

@{
    ViewData["Title"] = "Alterar Alta Hospitalar";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InternacaoId" />
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Data" class="control-label"></label>
                    <input asp-for="Data" class="form-control" />
                    <span asp-validation-for="Data" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="CondicaoPaciente" class="control-label"></label>
                    <input asp-for="CondicaoPaciente" class="form-control" />
                    <span asp-validation-for="CondicaoPaciente" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label asp-for="InstrucoesPosAlta" class="control-label"></label>
                    <input asp-for="InstrucoesPosAlta" class="form-control" />
                    <span asp-validation-for="InstrucoesPosAlta" class="text-danger"></span>
                </div>
            </div>

            <hr />

            <div class="d-flex gap-3">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar Para a Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
