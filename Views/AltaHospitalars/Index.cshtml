@model IEnumerable<Hospisim.Models.AltaHospitalar>

@{
    ViewData["Title"] = "Altas Hospitalares";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="d-flex justify-content-between align-items-center my-3">
    <a class="btn btn-primary" asp-action="Create">Cadastrar Nova Alta</a>

    <form asp-action="Index" method="get" class="w-50">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="Buscar por nome do paciente..." value="@ViewData["CurrentFilter"]">
            <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-search"></i></button>
            <a asp-action="Index" class="btn btn-outline-danger" title="Limpar Filtro"><i class="bi bi-x-lg"></i></a>
        </div>
    </form>
</div>


<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr class="text-center">
                <th>Paciente</th>
                <th>Data da Alta</th>
                <th>Condição do Paciente</th>
                <th style="width: 150px;">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Internacao?.Paciente?.NomeCompleto</td>
                    <td>@Html.DisplayFor(modelItem => item.Data)</td>
                    <td>@Html.DisplayFor(modelItem => item.CondicaoPaciente)</td>
                    <td class="text-nowrap text-center">
                        <a asp-action="Edit" asp-route-id="@item.InternacaoId" class="btn btn-outline-primary btn-sm" title="Editar"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="Details" asp-route-id="@item.InternacaoId" class="btn btn-outline-info btn-sm" title="Detalhes"><i class="bi bi-search"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.InternacaoId" class="btn btn-outline-danger btn-sm" title="Excluir"><i class="bi bi-trash3"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>