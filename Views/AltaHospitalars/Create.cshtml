@model Hospisim.Models.AltaHospitalar

@{
    ViewData["Title"] = "Cadastrar Nova Alta Hospitalar";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">

                    <div class="col-12 mb-3">
                        <label asp-for="InternacaoId" class="control-label">Internação</label>
                        <select asp-for="InternacaoId" class="form-control" asp-items="ViewBag.InternacaoId">
                            <option value="">-- Selecione a Internação do Paciente --</option>
                        </select>
                        <span asp-validation-for="InternacaoId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Data" class="control-label"></label>
                        <input asp-for="Data" class="form-control" />
                        <span asp-validation-for="Data" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="CondicaoPaciente" class="control-label"></label>
                        <input asp-for="CondicaoPaciente" class="form-control" />
                        <span asp-validation-for="CondicaoPaciente" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="InstrucoesPosAlta" class="control-label"></label>
                        <input asp-for="InstrucoesPosAlta" class="form-control" />
                        <span asp-validation-for="InstrucoesPosAlta" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex gap-3 mt-3">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}