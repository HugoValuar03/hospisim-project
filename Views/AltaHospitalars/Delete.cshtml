@model Hospisim.Models.AltaHospitalar

@{
    ViewData["Title"] = "Excluir Alta Hospitalar";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <h1 class="text-center">@ViewData["Title"]</h1>

        <div class="alert alert-danger mt-4" role="alert">
            <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> Atenção!</h4>
            <p>Você tem certeza que deseja excluir permanentemente o registro de alta abaixo? Esta ação não pode ser desfeita.</p>
        </div>

        <div class="card shadow-sm mt-4">
            @if (Model.Internacao?.Paciente != null)
            {
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0">Paciente: @Model.Internacao.Paciente.NomeCompleto</h4>
                </div>
            }
            <div class="card-body">
                <h5>Dados da Alta a ser Excluída</h5>
                <dl class="row">
                    <dt class="col-sm-4">Data da Alta</dt>
                    <dd class="col-sm-8">@Model.Data.ToString("g")</dd>

                    <dt class="col-sm-4">Condição do Paciente</dt>
                    <dd class="col-sm-8">@Model.CondicaoPaciente</dd>

                    <dt class="col-sm-4">Instruções Pós-Alta</dt>
                    <dd class="col-sm-8">@Model.InstrucoesPosAlta</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="InternacaoId" />
            <div class="d-flex gap-3">
                <input type="submit" value="Sim, Excluir Registro" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Não, Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>